@ECHO OFF
SET SOURCE_PROJECT=Diary.CQRS.Web
SET PROJECT_DIR=%1
SET TARGET_ITEM=%2

mkdir "%PROJECT_DIR%%TARGET_ITEM%"

if "%3"=="" GOTO COPY_DIR
GOTO COPY_FILE

:COPY_DIR
rmdir "%PROJECT_DIR%%TARGET_ITEM%\*.*" /s /q
mkdir "%PROJECT_DIR%%TARGET_ITEM%"
xcopy "%PROJECT_DIR%..\%SOURCE_PROJECT%\%TARGET_ITEM%" "%PROJECT_DIR%%TARGET_ITEM%" /Y /S /E
GOTO END

:COPY_FILE
SET FILE_NAME=%3
del "%PROJECT_DIR%%TARGET_ITEM%\%FILE_NAME%" /q
copy "%PROJECT_DIR%..\%SOURCE_PROJECT%\%TARGET_ITEM%\%FILE_NAME%" "%PROJECT_DIR%%TARGET_ITEM%" /Y
GOTO END

:END